<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="res_users_inherit_form" model="ir.ui.view">
            <field name="name">res.users.inherit.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Email" name="email_credentials">
                        <group>
                            <group name="email">
                                <field name="imap_server"/>
                                <field name="email_user_name"/>
                            </group>
                            <group name="password">
                                <field name="email_folder"/>
                                <field name="email_password" password="1"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
